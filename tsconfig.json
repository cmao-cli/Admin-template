{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "target": "es6",
    "lib": ["dom", "es2016"],
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./types/*"
      ],
      "src/*": ["./src/*"],
      "root": ["."],
      "components/*": [
        "./src/components/*"
      ]
    },
    "sourceMap": true,
    // 是否需要开启严格模式，开启严格
    // "strict": true 严格模式
  },
  "files": [
    "src/index.tsx",
    "./js_transition.d.ts"
  ],
  "include": [
    "types",
    "acceptance_test",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true
  }
}
